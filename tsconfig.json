{
  "extends": "./tsconfig-strict.json",
  "compilerOptions": {
    "outDir": "./lib/dist",
    "allowJs": false,
    "target": "esnext",
    "module": "commonjs",
    "jsx": "react",
    "declaration": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": [
      "jest",
      "lodash",
      "react",
      "react-native",
      "react-test-renderer"
    ],
    "baseUrl": ".",
    "paths": {
      "react": [
        "./node_modules/@types/react"
      ],
      "react-native-navigation": [
        "lib/src/"
      ],
      "react-native-navigation/*": [
        "lib/src/*"
      ]
    }
  },
  "include": [
    "./lib/src/**/*",
    "./playground/**/*",
    "lib/Mock"
  ]
}